<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.Beepy"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Beepy.title"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/main_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Beepy.subtitle"
        android:layout_marginVertical="25dp" />

    <Button
        android:id="@+id/main_button_waiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_for_waiter"
        android:theme="@style/Beepy.ChosingButton"
        android:background="@drawable/rounded_button"
        android:layout_marginVertical="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_bill"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"/>

    <ScrollView
        android:id="@+id/table_bill_scrollview"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/food_order_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/table_bill_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/bill_total"
        android:textStyle="bold"
        android:textColor="#AC0606"
        android:gravity="center"
        android:textSize="35sp"/>

</LinearLayout>